<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
    </style>

    <style name="CusDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowMinWidthMajor">90%</item>
    </style>

    <style name="TintedProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint" tools:ignore="NewApi">@android:color/holo_red_dark
        </item>
        <item name="android:indeterminateTintMode" tools:ignore="NewApi">src_in</item>
    </style>

</resources>
